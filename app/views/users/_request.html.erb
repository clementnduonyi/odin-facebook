<% @requests.each do |req|%><br />
    <%= link_to req.sender.firstname, user_path(req.sender) %>
    <%= button_to "Confirm", confirm_request_path(req), :class => "btn btn-primary mb-3"%>
    <%= button_to "Delete", declined_request_path(req), method: :delete, :class => "btn btn-primary mb-3" %>
<% end %>





