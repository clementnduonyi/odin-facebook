<div class="container w-50">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="col">
      <p>
        <%= @post.body %>
      </p>
      <p class="mt-3">
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
      </p>
      <div class="ms-5 mt-5">
        <% @post.comments.each do |comment| %>
          <%= render 'comments/comment', comment: comment, post: @post %>
        <% end %>
      </div>
    </div>
    <%= render 'posts/form'%>
  </div>
</div>




